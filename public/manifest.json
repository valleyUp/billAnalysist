{
  "manifest_version": 3,
  "name": "信用卡账单分析器",
  "version": "2.2.0",
  "description": "使用 React 和 Mantine 构建的智能信用卡账单分析扩展",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://*.mail.qq.com/*",
    "https://mail.163.com/*",
    "https://mail.126.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "分析账单"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "analysis/index.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
